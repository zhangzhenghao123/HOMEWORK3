#include <stdio.h>//V1计算器                                 
int main()
{
	char strexp[]="1+2+2+1+2+5+4-1-3+4-8;
	int res=strexp[0]-'0';
	for(int i=1;i<strlen(strexp);i++)
	{
		if(strexp[i]=='+')
		{
			int a=strexp[i+1]-'0';
			res=res+a;
			i++;
		}
		else if(strexp[i]=='-';
		{
			int a=strexp[i+1]-'0';
			res=res-a;
			i++;
		}
	}
	printf("res=%d",res);
	
	
		return 0;
}
 
 #include <stdio.h>//v0计算器
int main()
{
	char strexp[]="3+4";
	int a=strexp[0]-'0';
	int b=strexp[2]-'0';
	int c=a+b;
	printf("c=%d\n",c);
	
	
		return 0;
}

#include <stdio.h>//v2计算器
int main()
{
	char strexp[]="2*2/4*1/1*2*3/2;
		int res=strexp[0]-'0';
	for(int i=1;i<14;i++)
	{
		if(strexp[i]=='*')
		{
			int a=strexp[i+1]-'0';
			res=res*a;
			i++;
		}
		else if(strexp[i]=='/')
		{
			int a=strexp[i+1]-'0';
			res=res/a;
			i++;
		}
	}
	printf("res=%d\n",res);
	
		return 0;}
    
#include <stdio.h>//v3计算器
int main()
{
	char strexp[]="2+2*3+2/2-1";
	int a=strexp[0]='0';
int b=strexp[2]='0';
	int c=strexp[4]='0';
int d=strexp[6]='0';
int f=strexp[8]='0';
int g=a+b*c+d-f;
printf("g=%d\n",g);
		return 0;
}


